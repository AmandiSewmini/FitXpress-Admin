<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#2C2C2C" />  <!-- dark gray background -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional stroke/border -->
    <stroke
        android:width="1dp"
        android:color="#444444" /> <!-- subtle border -->

    <!-- Optional padding inside -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
