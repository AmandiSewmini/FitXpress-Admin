<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.admin.fitxpress">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitXpressAdmin"
        tools:targetApi="31">


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FitXpressAdmin.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Dashboard Activity (Your main interface) -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- Empty MainActivity (not used for main interface) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Products Activity -->
        <activity
            android:name=".ProductsActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <!-- Add/Edit Product Activity -->
        <activity
            android:name=".AddEditProductActivity"
            android:exported="false"
            android:parentActivityName=".ProductsActivity" />

        <!-- Categories Activity -->
        <activity
            android:name=".CategoriesActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <!-- AddEditCategories Activity -->
        <activity
            android:name=".AddEditCategoryActivity"
            android:exported="false"
            android:parentActivityName=".CategoriesActivity" />


        <!-- Trainers Activity -->
        <activity
            android:name=".TrainersActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <!-- AddEditTrainers Activity -->
        <activity
            android:name=".AddEditTrainerActivity"
            android:exported="false"
            android:parentActivityName=".TrainersActivity" />

        <!-- Orders Activity -->
        <activity
            android:name=".OrdersActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <!-- Users Activity -->
        <activity
            android:name=".UsersActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <!-- Notifications Activity -->
        <activity
            android:name=".NotificationsActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />


    </application>
</manifest>
